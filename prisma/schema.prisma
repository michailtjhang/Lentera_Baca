// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Novel {
  id          String    @id @default(cuid())
  title       String    @unique                      // judul harus unik
  slug        String    @unique                      // slug untuk url
  author      String
  description String?
  coverImage  String?
  status      Status    @default(ONGOING)           // ongoing, complete, drop, hiatus
  genres      Genre[]
  tags        Tag[]
  chapters    Chapter[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum Status {
  ONGOING
  COMPLETE
  DROP
  HIATUS
}

model Genre {
  id     String  @id @default(cuid())
  name   String  @unique
  novels Novel[]
}

model Tag {
  id     String  @id @default(cuid())
  name   String  @unique
  novels Novel[]
}

model Chapter {
  id        String   @id @default(cuid())
  title     String
  content   String   @db.Text
  order     Int
  novelId   String
  novel     Novel    @relation(fields: [novelId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([novelId])
  @@index([order])
}
