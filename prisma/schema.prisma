generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Novel {
  id          String    @id @default(cuid())
  title       String
  author      String
  description String?
  coverImage  String?
  chapters    Chapter[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Chapter {
  id        String   @id @default(cuid())
  title     String
  content   String   @db.Text
  order     Int
  novelId   String
  novel     Novel    @relation(fields: [novelId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([novelId])
  @@index([order])
}
